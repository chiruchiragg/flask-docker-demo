pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/chiruchiragg/flask-docker-demo.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                dir('dockerdemo1/app') {
                    sh 'docker build -t flask-app .'
                }
            }
        }
        stage('Run Flask App') {
            steps {
                sh 'docker run -d -p 5000:5000 flask-app'
            }
        }
    }
}

